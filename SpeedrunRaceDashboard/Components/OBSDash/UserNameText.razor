<div class="username-text text-white fw-bold d-flex align-items-center px-2 py-1">
    @if (ShowTwitchIcon)
    {
        <i class="bi bi-twitch me-1" style="color:#9146FF;"></i>
    }
    @DisplayText
    @if (!mute)
    {
        <i class="bi bi-volume-up-fill ms-2 text-light"></i>
    }
</div>


@code {
    [Parameter]
    public string DisplayText { get; set; } = "";

    [Parameter]
    public bool SmallMode { get; set; } = false;

    [Parameter]
    public bool mute { get; set; } = false;

    [Parameter]
    public bool ShowTwitchIcon { get; set; } = false;
}
